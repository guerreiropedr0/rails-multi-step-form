<%= turbo_frame_tag "wizard" do %>
  <%= form_with(model: post) do |form| %>
    <% if post.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(post.errors.count, "error") %>
          prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form.hidden_field :title %>
    <%= form.hidden_field :description %>

    <div>
      <%= form.label :published_at, style: "display: block" %>
      <%= form.date_field :published_at %>
    </div>

    <div>
      <%= form.submit %>
      <%= form.submit "Previous step", formaction: previous_step_new_post_path(step: 2) %>
    </div>
  <% end %>
<% end %>
